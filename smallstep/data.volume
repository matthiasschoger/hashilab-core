
plugin_id   = "nfs"
type        = "csi"
id          = "smallstep"
name        = "Smallstep"

capability {
	access_mode = "single-node-writer"
	attachment_mode = "file-system"
}

context {
  server = "storage.home"
  share = "/volume2/homelab"
  subDir = "smallstep"
  mountPermissions = "0"  
}

mount_options {
  fs_type = "nfs"
  mount_flags = [ "timeo=30", "vers=4.1", "nolock", "sync" ]
}

